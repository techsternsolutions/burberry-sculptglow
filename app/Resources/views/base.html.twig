<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block viewport %}<meta name="viewport" content="width=device-width, initial-scale=1">{% endblock %}
        <title>{% block title %}Burberry Sculpt & Glow{% endblock %}</title>
        {% block head %}{% endblock %}
        {% stylesheets
            '@bootstrap_css'
            '@AppBundle/Resources/bower/cropper/dist/cropper.css'
            '@AppBundle/Resources/bower/select2/dist/css/select2.css'
            'bundles/app/css/phone.less'
            'bundles/app/css/tablet.less'
            'bundles/app/css/desktop.less'
            output="css/main.css"
            filter="cssrewrite"
        %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen">
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('apple-touch-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('apple-touch-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('apple-touch-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('apple-touch-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('apple-touch-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('apple-touch-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('apple-touch-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('apple-touch-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon-180x180.png') }}">
        <link rel="icon" type="image/png" href="{{ asset('favicon-32x32.png') }}" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ asset('android-chrome-192x192.png') }}" sizes="192x192">
        <link rel="icon" type="image/png" href="{{ asset('favicon-96x96.png') }}" sizes="96x96">
        <link rel="icon" type="image/png" href="{{ asset('favicon-16x16.png') }}" sizes="16x16">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="msapplication-TileImage" content="{{ asset('mstile-144x144.png') }}">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body {{app.request.locale == 'ara' ? 'dir="rtl"' : ''}} class="{{ app.request.get('_route') }} {{ app.request.locale }} {% if block('nav')|trim is empty %}nonav{% endif %}">
        {% block nav %}
        <nav class="navbar">
            <div class="navbar-header">
                <div id="menu-button" class="button-wrapper">
                    <button type="button" class="navbar-toggle collapsed">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <div class="nav-wrapper">
                    <div class="large-nav">
                        <a href="{{ path('product') }}">
                            <img src="{{ asset("bundles/app/images/menu-pen.png") }}">
                            {% trans %}nav.product{% endtrans %}
                        </a>

                        <br>

                        <a href="{{ path('practice') }}">
                            <img src="{{ asset("bundles/app/images/menu-practice.png") }}">
                            {% trans %}nav.practice{% endtrans %}
                        </a>

                        <br>

                        <a href="{{ path('share') }}">
                            <img src="{{ asset("bundles/app/images/menu-share.png") }}">
                            {% trans %}nav.share{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        {% endblock %}

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>

        <div id="wait" style="display:none">
            <img src="/bundles/app/images/wait.gif" alt=""/>
        </div>

        {% javascripts
            '@jquery'
            '@bootstrap_js'
            '@AppBundle/Resources/bower/hammerjs/hammer.js'
            '@AppBundle/Resources/bower/jquery-hammerjs/jquery.hammer.js'
            '@AppBundle/Resources/bower/jquery-mousewheel/jquery.mousewheel.js'
            '@AppBundle/Resources/bower/cropper/dist/cropper.js'
            '@AppBundle/Resources/bower/select2/dist/js/select2.js'
            '@AppBundle/Resources/bower/viewport-units-buggyfill/viewport-units-buggyfill.js'
            '@AppBundle/Resources/bower/viewport-units-buggyfill/viewport-units-buggyfill.hacks.js'
            '@AppBundle/Resources/public/js/main.js'
            output="js/main.js"
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% block javascripts %}{% endblock %}
        <script>
            window.viewportUnitsBuggyfill.init({
                hacks: window.viewportUnitsBuggyfillHacks
            });
        </script>
        {% if app.environment == 'prod' %}
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                ga('create', 'UA-66807206-1', 'auto');
                ga('send', 'pageview');
            </script>
        {% else %}
            <!-- google analytics code goes here in production mode -->
        {% endif %}
    </body>
</html>
